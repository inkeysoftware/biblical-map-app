{
  "name": "biblical-map-app",
  "version": "0.1.0",
  "private": true,
  "author": "Map Labeler Team",
  "description": "Biblical Map Labeling Application",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.3.6",
    "electron-squirrel-startup": "^1.0.1",
    "leaflet": "^1.9.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-leaflet": "^5.0.0",
    "react-scripts": "5.0.1",
    "usfm-js": "^3.4.3",
    "web-vitals": "^2.1.4",
    "xml2js": "^0.6.2"
  },
  "main": "build/electron-main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-debug": "electron --inspect-brk=9229 .",
    "electron-source": "set NODE_ENV=development && electron electron-main.js",
    "electron-dev": "set NODE_ENV=development && electron .",
    "electron-prod": "set NODE_ENV=production && electron .",
    "copy-resources": "node copy-resources.js",
    "package": "react-scripts build && node copy-resources.js && electron-builder build --win --publish never",
    "package-mac": "react-scripts build && node copy-resources.js && electron-builder build --mac --publish never",
    "package-linux": "react-scripts build && node copy-resources.js && electron-builder build --linux --publish never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "fs-extra": "^11.3.0"
  },
  "build": {
    "appId": "com.mapLabeler.biblical-map-app",
    "productName": "Biblical Map Labeler",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets"
      }
    ],    "asar": false,
    "npmRebuild": false,
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "public/logo512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    }
  }
}
